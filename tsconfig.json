{
	"compilerOptions": {
		"strict": true,
		"target": "es2021",
		"lib": [
			"es2021"
		],
		"module": "commonjs",
		"outDir": "dist",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}